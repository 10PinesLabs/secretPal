<hibernate-configuration>
    <session-factory>

        <property name="connection.url">jdbc:mysql://localhost/calendardb</property>
        <property name="connection.username">apprentice</property> <!-- TODO: HabrÃ¡ forma de no comitear usr y psw? -->
