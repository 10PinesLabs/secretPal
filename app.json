{
  "name": "secretPal",
  "description": "Aplicaci√≥n para administrar el \"Juego\" del Pino invisible",
  "scripts": {
    "postdeploy": "pg_dump $SRC_DATABASE_URL --format=custom --file=/tmp/dump.bin  && pg_restore --dbname=$DATABASE_URL --single-transaction /tmp/dump.bin && ./migrate.sh"
  },
  "env": {
    "SRC_DATABASE_URL": {
      "required": true
    },
    "BACKOFFICE_SECRET": {
      "required": true
    },
    "MAIL_PASSWORD": {
      "required": true
    },
    "USE_FAKE_MAILER": "true",
    "FLYWAY_ENABLED": "false"
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/java"
    }
  ]
}
